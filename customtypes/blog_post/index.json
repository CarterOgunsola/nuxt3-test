{
    "format": "page",
    "id": "blog_post",
    "label": "Blog Post",
    "repeatable": true,
    "status": true,
    "json": {
        "Main": {
            "uid": {
                "type": "UID",
                "config": {
                    "label": "UID"
                }
            },
            "featured": {
                "type": "Boolean",
                "config": {
                    "label": "featured",
                    "placeholder_false": "false",
                    "placeholder_true": "true",
                    "default_value": false
                }
            },
            "title": {
                "type": "Text",
                "config": {
                    "label": "Title",
                    "placeholder": "{{Blog Title Here}}"
                }
            },
            "publication_date": {
                "type": "Date",
                "config": {
                    "label": "Publication Date",
                    "placeholder": ""
                }
            },
            "slices": {
                "type": "Slices",
                "fieldset": "Slice Zone",
                "config": {
                    "choices": {
                        "embedded_video": {
                            "type": "SharedSlice"
                        },
                        "quote": {
                            "type": "SharedSlice"
                        },
                        "rich_text_block": {
                            "type": "SharedSlice"
                        },
                        "featured_image": {
                            "type": "SharedSlice"
                        }
                    }
                }
            }
        },
        "SEO & Metadata": {
            "meta_title": {
                "config": {
                    "label": "Meta Title",
                    "placeholder": "A title of the page used for social media and search engines"
                },
                "type": "Text"
            },
            "meta_description": {
                "config": {
                    "label": "Meta Description",
                    "placeholder": "A brief summary of the page"
                },
                "type": "Text"
            },
            "meta_image": {
                "config": {
                    "constraint": {
                        "height": 1260,
                        "width": 2400
                    },
                    "label": "Meta Image",
                    "thumbnails": []
                },
                "type": "Image"
            }
        }
    }
}
